                        <GradientStop Color="#FF0E0E0E" Offset="0.5"/>
                        <GradientStop Color="#FF181818" Offset="0.75"/>
                        <GradientStop Color="#FF212121" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

